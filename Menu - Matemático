#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {
	int i=1;
	int maior=0;
	int valor;
	int fat=1;
	int total_par = 0;
	int soma_par = 0;
	int total_impar = 0;
	int soma_impar = 0;
	char opcao;
	
	printf("Menu\n(a)Maior valor\n(b)Fatorial\n(c)Pares e Impares\n");
	scanf("%c", &opcao);
	
	
	if(opcao =='a'){
	for(i=0;i<5;i++)
	{
		printf("Digite um valor:\n");
		scanf("%d", &valor);
		if(valor>maior){
			maior=valor;
		}
	}
	printf("O maior valor informado foi: %d", maior);
	}
	
	else if(opcao =='b')
	{
	printf("Digite um valor de N:\n");
	scanf("%d", &valor);
	for(i=1;i<=valor;i++){
		fat = i*fat;
	}
		printf("Fatorial de %d eh %d ", valor,fat);
	}
	
	else if(opcao =='c'){
	for(i=0;i<15;i++){
		printf("Digite um valor inteiro:\n");
		scanf("%d", &valor);
		
		if(valor%2==0){
			total_par++;
			soma_par+=valor;
		}
		else{
			total_impar++;
			soma_impar+=valor;
		}
	}
	printf("Total de pares: %d\nSoma dos pares: %d\n", total_par, soma_par);
	printf("Total de pares: %d\nSoma dos pares: %d\n", total_impar, soma_impar);
	}
	else{
		printf("Digite uma coisa vÃ¡lida\n");
	}
	
	return 0;
}
