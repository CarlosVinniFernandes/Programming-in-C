#include <stdio.h>
#include <stdlib.h>
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int i,j, m, n ;
	int matriz[100][100];
	printf("Digite o numero de colunas: \n");
	scanf("%d", &m);
	
	printf("Digite o numero de linhas: \n");
	scanf("%d", &n);
	
	printf("Digite um n√∫mero: ");
	
	
	for(i=0;i< m;i++){
		for(j=0; j<n;j++){
			scanf("%d", &matriz[i][j]);
		}
		printf("\n");
	}
	printf("\n--------------\n");
	
	
	
	for(i=0;i< m;i++){
		for(j=0; j<n;j++){
			printf("%d ", matriz[i][j]);
		}
		printf("\n");
	}
	printf("\n--------------\n");

	for(i=0;i< n;i++){
		for(j=0; j<m;j++){
			printf("%d ", matriz[j][i]);
		}
		printf("\n");
	}
	return 0;
}
