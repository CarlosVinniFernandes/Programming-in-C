#include <stdio.h>
#include <string.h>

int main() {
    char string[50];
    printf("Escreva uma palavra:\n"); 
    scanf("%s", string);
    
    for (int i = 0; string[i] != '\0'; i++){
        if (string[i] >= 'A' && string[i] <= 'Z'){
            string[i] = string[i] + 32; 
        }
        printf("%c ", string[i]); 
    }
    return 0;
}
